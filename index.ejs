<!DOCTYPE html>
<html>
<head>
    <title>To-Do List</title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <h1>My To-Do List</h1>

    <form action="/add" method="POST">
        <input type="text" name="todo" placeholder="Enter a task" required>
        <button type="submit">Add</button>
    </form>

    <ul>
        <% todos.forEach(todo => { %>
            <li>
                <form action="/update/<%= todo.id %>" method="POST" style="display:inline;">
                    <input type="text" name="updatedTodo" value="<%= todo.text %>">
                    <button type="submit">Update</button>
                </form>
                <form action="/delete/<%= todo.id %>" method="POST" style="display:inline;">
                    <button type="submit">Delete</button>
                </form>
            </li>
        <% }) %>
    </ul>
</body>
</html>
